<%= form_for(task) do |f|%>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label(:content,'タスク：') %><br>
  <%= f.text_field(:content) %><br>
  
  <%= f.label(:status, 'ステータス：') %><br>
  <%= f.select :status, [["未着手", "未着手"], ["着手", "着手"], ["保留", "保留"]] %><br>
  
  <%= f.submit('投稿') %>
<% end %>